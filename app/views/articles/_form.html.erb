<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>*<br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :slug %>*<br />
    <%= f.text_field :slug %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => '128' %>
  </div>
  <div class="field">
    <%= f.label :position %>*<br />
    <%= f.number_field :position %>
  </div>
  <div class="field">
    <%= f.label :home %><br />
    <%= f.check_box :home %>
  </div>
  <div class="field">
    <%= f.label :top %><br />
    <%= f.check_box :top %>
  </div>
  <div class="field">
    <%= f.label :parent_id %><br />
    <%= select_tag 'article[parent_id]', parent_article_options(@article) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= render 'shared/imperavi_editor', :target => :article_body %>
